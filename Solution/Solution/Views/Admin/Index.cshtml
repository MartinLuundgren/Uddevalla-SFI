@model IEnumerable<Solution.Models.Segment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<button type="button" class="btn btn-primary btn-lg btn-block">@Html.ActionLink("Add new Segment", "newSegment", "Admin")</button>
<button type="button" class="btn btn-primary btn-lg btn-block">@Html.ActionLink("Add new Category", "newCategory", "Admin")</button>
<button type="button" class="btn btn-primary btn-lg btn-block">@Html.ActionLink("Add new Assignment", "newAssigment", "Admin")</button>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>
